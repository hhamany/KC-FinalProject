<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/addingmed"
    tools:context=".AddingMedActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="236dp"
            android:layout_height="113dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/fontyy"
            android:text="أضف دوائك"
            android:textColor="#00C2CB"
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.316" />

        <EditText
            android:id="@+id/addedmedname"
            android:layout_width="217dp"
            android:layout_height="48dp"
            android:ems="10"
            android:fontFamily="@font/fontyy"
            android:hint="إسم الدواء"
            android:inputType="textPersonName"
            android:paddingRight="14dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.553"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.516"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/medsize"
            android:layout_width="215dp"
            android:layout_height="48dp"
            android:ems="10"
            android:fontFamily="@font/fontyy"
            android:hint="الكمية"
            android:inputType="textPersonName"
            android:paddingRight="14dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.622"
            tools:ignore="TextContrastCheck,TextContrastCheck" />

        <EditText
            android:id="@+id/medextra"
            android:layout_width="212dp"
            android:layout_height="51dp"
            android:ems="10"
            android:fontFamily="@font/fontyy"
            android:hint="ملاحظات عنه "
            android:inputType="textPersonName"
            android:paddingRight="14dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.535"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.736"
            tools:ignore="TextContrastCheck,TextContrastCheck,TextContrastCheck" />

        <Button
            android:id="@+id/done"
            android:layout_width="140dp"
            android:layout_height="68dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#0076CB"
            android:fontFamily="@font/font2"
            android:text="انتهيت"
            android:textSize="17dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.544"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.992" />

        <Button
            android:id="@+id/alarm1"
            android:layout_width="211dp"
            android:layout_height="66dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#00C2CB"
            android:fontFamily="@font/fontyy"
            android:text=" موعد دوائك"
            android:textSize="27dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.537"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.863" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>